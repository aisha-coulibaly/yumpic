<div class="text-center">

        <img class="rounded img-fluid">
        <% if @user.image? %>
            <%= image_tag @user.image.url %>
          <% else %>
            <%= image_tag("/assets/icon/no-image.png") %>
          <% end %>
        <h3 class="text-center"><%= current_user.name %></h3>
      </div>
      <div class="section1 text-center">
        <button type="button" class="btn btn-outline-dark">follow</button>
        <button type="button" class="btn btn-outline-dark">following</button>
        <button type="button" class="btn btn-outline-dark">follower</button>
      </div>
    </div>
</div>
<%= render 'posts/posts', posts: current_user.posts %>
