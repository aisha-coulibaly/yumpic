<% if current_user.likes?(post) %>
    <%= form_with(model: current_user.favorites.find_by(post_id: post.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'Unlike', class: 'btn btn-dark btn-sm-block' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :post_id, post.id %>
      <%= f.submit 'Like', class: 'btn btn-warning btn-sm-block' %>
    <% end %>
<% end %>
