<br><br>
<div class="container">
  <div class="row">

    <% posts.each do |post| %>
          <div class="col-md-4">
          <%= link_to post.user.name, user_path(post.user) %><br>
          
          <%= link_to image_tag(post.image.url(:content)), post_path(post) if post.image.present? %><br>
         
       
          <%= render 'posts/tag_list', tag_list: post.tag_list %>
          
          
         
          <% if current_user == post.user %>
            <%= link_to "×", post, method: :delete, data: { confirm: "本当に削除しますか?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
          
          <%= render "favorite/favorite_button", post: post %>
         
          
        </div>
  <% end %>
  
   </div>
  
  </div>


